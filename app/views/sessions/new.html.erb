<h1>Login</h1>
<div class="login">
  <%= form_for :session, url: login_path do |f| %>
    <div class="input-field col s12">
      <%= f.text_field :username %>
      <%= f.label :username %>
    </div>
    <div class="input-field col s12">
      <%= f.password_field :password %>
      <%= f.label :password %>
    </div>
    <%= f.submit "Login", class: 'btn' %>
  <% end %>
</div>

<%= link_to 'Create Account', new_user_path %>
