<div class="creature">
  <%= form_for [:admin, @creature] do |f| %>
    <%= f.label :breed %>
    <%= f.text_field :breed %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :price %>
    <%= f.text_field :price %>
    <%= f.label :image_url %>
    <%= f.text_field :image_url %>
    <br>
    <% Creature.statuses.keys.each do |status| %>
      <%= f.radio_button :status, status %>
      <%= f.label status.to_sym, for: 'creature_status_' + status%>
      <br>
    <% end %>
    <br>
    <%= f.submit %>
  <% end %>
</div>
