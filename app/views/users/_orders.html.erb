<h1 class='center'>My Orders</h1>
<table class="orders">
  <% @user.orders.each do |order| %>
    <% @order = order %>
    <tr id="order-<%= order.id%>">
      <div class="card">
        <div class="card-content">
          <span class="card-title"><%= link_to "Order #: #{order.id}", order_path(order) %>
          <br>
          </span>
          <p>Ordered on: <%= order.created_at.strftime('%b %e, %l:%M %p') %></p>
          <p>Total: <%= number_to_currency order.total %></p>
          <p>Status: <%= order.status.titleize %></p>
          <%= cancel_link %>
        </div>
      </div>
    </tr>
  <% end %>
</table>
