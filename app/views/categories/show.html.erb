<h1><%=@category.name.titleize%></h1>
<ul class="category-creatures">
  <% @category.creatures.active.each do |creature| %>
  <li>
    <%= image_tag creature.image_url %><br>
    Breed: <%= link_to creature.breed, creature_path(creature) %><br>
    Price: <%= creature.price %><br>
    <%= button_to "Add to Cart", cart_path(creature_id: creature.id) %>
  </li>
  <% end %>
</ul>
